<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haipeng.geomancy.ui.CameraContentActivity"
    android:background="@color/my_gray9"
    >

    <SurfaceView
        android:id="@+id/camera_content_surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ScrollView
        android:id="@+id/camera_content_scroll_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_gray9">
    <LinearLayout
        android:id="@+id/camera_content_scroll_one_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="本方位的宜忌分析"
                android:textSize="20sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="(理气)"
                android:textSize="20sp"
                android:textColor="@color/green"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/camera_content_tv_profile_direction"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:text="方位"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                />
            <TextView
                android:id="@+id/camera_content_tv_profile_direction_value"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="南位"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/camera_content_tv_profile_direction"
                style="@style/TextViewStyleRedMiddlesp"/>
            <ImageView
                android:id="@+id/camera_content_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/camera_content_tv_profile_direction_value"
                />
            <TextView
                android:id="@+id/camera_content_tv_profile_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/camera_content_tv_profile_direction"
                android:layout_alignLeft="@+id/camera_content_tv_profile_direction"
                android:text="属性"
                android:textSize="20sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:id="@+id/camera_content_tv_profile_profile_value"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="好好"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/camera_content_tv_profile_direction"
                android:layout_toRightOf="@+id/camera_content_tv_profile_profile"
                style="@style/TextViewStyleRedMiddlesp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewStyleRedMiddlesp"
            />
        <TextView
            android:id="@+id/tv_analyse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewStyleRedMiddlesp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="宜忌分析"
            android:textSize="20sp"
            android:textColor="@color/yellow"/>
        <LinearLayout
            android:id="@+id/ll_sui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="宜:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:id="@+id/tv_sui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewStyleRedSmallsp"
                android:gravity="bottom"
                android:layout_marginTop="3dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_nosuit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="不宜:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:id="@+id/tv_nosuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewStyleRedSmallsp"
                android:gravity="bottom"
                android:layout_marginTop="3dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_avoid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="忌:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:id="@+id/tv_avoid"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewStyleRedSmallsp"
                android:gravity="bottom"
                android:layout_marginTop="3dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_yearmonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="应验年月:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:id="@+id/tv_yearmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                style="@style/TextViewStyleRedSmallsp"
                android:layout_marginTop="3dp"/>

        </LinearLayout>
        <TextView
            android:text="\n建议利用屏幕快照、保存各方位的堪测记录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/yellow"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:visibility="gone"
            style="@style/TextViewStyleRedSmallsp"/>

    </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/camera_content_sv_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_gray10">
    <LinearLayout
        android:id="@+id/camera_content_operate_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/camera_content_operate_tv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/camera_content_operate_iv_one"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/camera_content_operate_tv_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/camera_content_operate_iv_two"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/camera_content_operate_tv_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/camera_content_operate_iv_three"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/camera_content_operate_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="开始勘测"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_brown"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
