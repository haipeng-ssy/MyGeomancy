<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="322dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white" >
    <TextView 
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="1970年1月1日 "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="200dp">
    <LinearLayout 
        android:id="@+id/ll_1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView 
        android:id="@+id/ll_1_tv_1"    
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:textColor="#57000000"
            android:text="1969年"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView 
android:id="@+id/ll_1_tv_2"
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:textColor="#000000"
            android:text="1970年"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/ll_1_tv_3"
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:textColor="#57000000"
            android:text="1972年"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView 
            android:id="@+id/ll_2_tv_1"
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="12月"
            android:textColor="#57000000"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/ll_2_tv_2"
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="1月"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/ll_2_tv_3"
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="2月"
            android:textColor="#57000000"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView 
            android:id="@+id/ll_3_tv_1"
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:textColor="#57000000"
            android:text="1日"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/ll_3_tv_2"
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:textColor="#000000"
            android:text="2日"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/ll_3_tv_3"
            android:layout_width="70dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:textColor="#57000000"
            android:text="3日"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    </LinearLayout>
<TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#55000000"/>
<TextView 
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="完成"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="17sp"/>

</LinearLayout>
